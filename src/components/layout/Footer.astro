---
import { siteConfig } from "@/site-config";
import { Icon } from "astro-icon";

const year = new Date().getFullYear();
---

<footer class="gap-y-2 pb-4 pt-20 align-top text-xs text-gray-500">
  <div class="mt-0">
    Copyright &copy; {year}{" "}
    {siteConfig.author}
  </div>
  <nav
    aria-label="More on this site"
    class="mt-2 gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
  >
    <a
      href="/"
      class="py-2 pr-2 underline sm:py-0 sm:pr-2 sm:hover:text-textColor"
      >Home</a
    >
    <a
      href="/posts/"
      class="px-4 py-2 underline sm:px-2 sm:py-0 sm:hover:text-textColor"
      >Blog</a
    >
    <a
      href="/now/"
      class="px-4 py-2 underline sm:px-2 sm:py-0 sm:hover:text-textColor">Now</a
    >
    <a
      href="/blogroll/"
      class="px-4 py-2 underline sm:px-2 sm:py-0 sm:hover:text-textColor"
      >Blogroll</a
    >
  </nav>
  <div>
    <p class="mt-2">
      <a href="/rss.xml" class="underline"
        ><Icon
          class="mr-1 inline h-4 w-4"
          name="mdi:rss"
          aria-hidden="true"
          focusable="false"
        />RSS</a
      >
    </p>
    <p class="mt-2">
      <Icon
        class="mr-1 inline h-4 w-4"
        name="mdi:cookie-off"
        aria-hidden="true"
        focusable="false"
      />No cookies between friends
    </p>
    <p class="mt-2">
      <a
        href="https://www.websitecarbon.com/website/kieran-mcguire-uk/"
        class="underline"
        >0.03g of CO2 per view / cleaner than 97% of tested pages</a
      >
    </p>
    <p
      class="mt-4 border-t-[0.5px] border-dashed border-gray-500 pt-2 font-semibold"
    >
      <a href="https://xn--sr8hvo.ws/previous"
        ><Icon
          class="mr-1 inline h-4 w-4"
          name="mdi:arrow-left-thin"
          aria-hidden="false"
          aria-label="previous"
          focusable="true"
        /></a
      >
      <em
        ><a href="https://xn--sr8hvo.ws" class="underline"
          >An IndieWeb Webring</a
        ></em
      >
      <Icon
        class="ml-1 inline h-4 w-4"
        name="mdi:spider-web"
        aria-hidden="true"
        focusable="false"
      /><Icon
        class="inline h-4 w-4"
        name="mdi:ring"
        aria-hidden="true"
        focusable="false"
      />
      <a href="https://xn--sr8hvo.ws/next"
        ><Icon
          class="ml-1 inline h-4 w-4"
          name="mdi:arrow-right-thin"
          aria-hidden="false"
          aria-label="next"
          focusable="true"
        /></a
      >
    </p>
  </div>
</footer>
